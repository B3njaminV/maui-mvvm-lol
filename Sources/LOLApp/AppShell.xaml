<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LOLApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LOLApp"
    xmlns:pages="clr-namespace:LOLApp.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
       
        <ShellContent
            Title="Home"
            Icon="lol"
            ContentTemplate="{DataTemplate pages:AccueilPage}"
        />

        <ShellContent
           Title="Champions"
           Icon="epee"
           ContentTemplate="{DataTemplate pages:ChampionPage}"
        />
    </TabBar>

</Shell>

