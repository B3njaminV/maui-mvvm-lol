<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOLApp.Pages.DetailPage"
             xmlns:converters="clr-namespace:LOLApp.Converters"
              Title="{Binding Name}">
    <ContentPage.Resources>
        <converters:Base64ToImage x:Key="Base64ToImg"/>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Modifier" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout>
            <Image Source="{Binding Path=Image, Converter={StaticResource Base64ToImg}}"/>
            <VerticalStackLayout Padding="10">
                <Label Text="{Binding Name}" FontSize="32" FontAttributes="Bold"/>
                <Label Text="{Binding Bio}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>