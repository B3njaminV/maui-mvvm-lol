<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOLApp.Pages.ChampionPages"
             Title="ChampionPages">
    <Grid RowDefinitions="*,*,*">
        <Label 
            Text="Champions !"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Grid.Row="0"/>

        <ListView ItemsSource="{Binding Champions}" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding Image}" Text="{Binding Name}" Detail="{Binding Class}"/>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid ColumnDefinitions="*, *" Grid.Row="2"/>

    </Grid>
</ContentPage>
